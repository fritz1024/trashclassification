    },

    async sendMessage() {
      const text = this.inputText.trim()
      if (!text || this.loading) return

      // æ·»åŠ ç”¨æˆ·æ¶ˆæ¯
      this.messages.push({
        role: 'user',
        content: text
      })
      this.inputText = ''
      this.scrollToBottom()

      this.loading = true
      try {
        // å‘é€å®Œæ•´çš„å¯¹è¯å†å²
        const res = await sendChatMessage({
          messages: this.messages
        })

        // æ·»åŠ AIå›å¤
        if (res && res.reply) {
          this.messages.push({
            role: 'assistant',
            content: res.reply
          })
          this.scrollToBottom()
        } else {
          throw new Error('æ— æ•ˆçš„å“åº”æ ¼å¼')
        }
      } catch (error) {
        console.error('èŠå¤©é”™è¯¯:', error)

        // ç§»é™¤åˆšæ‰æ·»åŠ çš„ç”¨æˆ·æ¶ˆæ¯ï¼ˆå› ä¸ºå‘é€å¤±è´¥ï¼‰
        this.messages.pop()

