    clearChat() {
      uni.showModal({
        title: 'æç¤º',
        content: 'ç¡®å®šè¦æ¸…ç©ºå½“å‰å¯¹è¯å—ï¼Ÿ',
        success: (res) => {
          if (res.confirm) {
            this.messages = []
            uni.showToast({
              title: 'å·²æ¸…ç©º',
              icon: 'success'
